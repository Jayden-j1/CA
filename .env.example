###############################################################
# DATABASES
###############################################################

# Local dev uses SQLite (simple file-based DB)
# DATABASE_URL="file:./dev.db"

# Production should override this in Vercel to Postgres
# Example:
# DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB_NAME?schema=public"


###############################################################
# NEXTAUTH (Authentication)
###############################################################

# App URL
# NEXTAUTH_URL="http://localhost:3000"
# In production (Vercel):
# NEXTAUTH_URL="https://your-app.vercel.app"

# Strong random secret (use `openssl rand -base64 32` to generate one)
# NEXTAUTH_SECRET="your-secret-here"


###############################################################
# STRIPE (Payments)
###############################################################

# Stripe test keys for development
# STRIPE_SECRET_KEY="sk_test_your_key_here"
# STRIPE_WEBHOOK_SECRET="whsec_your_key_here"

# In production replace with live keys:
# STRIPE_SECRET_KEY="sk_live_your_key_here"
# STRIPE_WEBHOOK_SECRET="whsec_live_your_key_here"


###############################################################
# EMAIL PROVIDER (Magic Link login with NextAuth EmailProvider)
###############################################################

# Example SMTP server (development: Ethereal, production: Resend/Postmark/etc.)
# EMAIL_SERVER="smtp://USER:PASSWORD@SMTP_HOST:587"
# EMAIL_FROM="Cultural Awareness App <noreply@yourdomain.com>"


###############################################################
# GOOGLE MAPS (Frontend maps integration)
###############################################################

# Must start with NEXT_PUBLIC_ so theyâ€™re exposed to the browser
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-maps-api-key"
# NEXT_PUBLIC_MAP_ID="your-map-style-id"


###############################################################
# PRISMA SCHEMA (for Vercel only)
###############################################################

# Local dev: defaults to SQLite schema
# Production (Vercel): set this to prisma/schema.prod.prisma
# PRISMA_SCHEMA="prisma/schema.prod.prisma"













