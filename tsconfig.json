{
  "compilerOptions": {
    // --- Output / module resolution ---
    "target": "ES2022",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "allowJs": false,
    "noEmit": true,
    "incremental": true,
    // --- Quality / DX ---
    "strict": true,
    "skipLibCheck": true, // ✅ ignore node_modules type noise
    "noUncheckedIndexedAccess": false, // you can enable later if you want
    "forceConsistentCasingInFileNames": true,
    // --- Path aliases ---
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    // --- Interop ---
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
    // --- Important: DO NOT list missing type packages here ---
    // "types": []  // ← Intentionally omitted to avoid “Cannot find type definition file for …”
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
